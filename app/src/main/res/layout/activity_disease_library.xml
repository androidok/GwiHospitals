<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_header" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/android_padding_normal">

        <include
            layout="@layout/include_layout_search_v2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/disease_lib_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/disease_lib_common"
            android:layout_width="match_parent"
            android:layout_height="@dimen/android_height_big"
            android:background="@drawable/selector_setting_item"
            android:clickable="true"
            android:drawablePadding="@dimen/android_padding_normal"
            android:drawableRight="@drawable/ic_action_next_item"
            android:gravity="center_vertical"
            android:onClick="onItemClick"
            android:padding="@dimen/android_padding_normal"
            android:text="常见疾病"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_gray_depart_item" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/disease_lib_part"
            android:layout_width="match_parent"
            android:layout_height="@dimen/android_height_big"
            android:background="@drawable/selector_setting_item"
            android:clickable="true"
            android:drawablePadding="@dimen/android_padding_normal"
            android:drawableRight="@drawable/ic_action_next_item"
            android:gravity="center_vertical"
            android:onClick="onItemClick"
            android:padding="@dimen/android_padding_normal"
            android:text="按部位查询"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_gray_depart_item" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/disease_lib_aplha"
            android:layout_width="match_parent"
            android:layout_height="@dimen/android_height_big"
            android:background="@drawable/selector_setting_item"
            android:clickable="true"
            android:drawablePadding="@dimen/android_padding_normal"
            android:drawableRight="@drawable/ic_action_next_item"
            android:gravity="center_vertical"
            android:onClick="onItemClick"
            android:padding="@dimen/android_padding_normal"
            android:text="按字母查询"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_gray_depart_item" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/health_baike_disease"
            android:layout_width="match_parent"
            android:layout_height="@dimen/android_height_big"
            android:background="@drawable/selector_setting_item"
            android:clickable="true"
            android:drawablePadding="@dimen/android_padding_normal"
            android:drawableRight="@drawable/ic_action_next_item"
            android:gravity="center_vertical"
            android:onClick="onItemClick"
            android:padding="@dimen/android_padding_normal"
            android:text="按科室查询"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_gray_depart_item" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/disease_lib_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>