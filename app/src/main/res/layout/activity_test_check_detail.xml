<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/android_padding_normal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_form_header"
                    android:gravity="center_vertical"
                    android:text="项目介绍"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_gray_depart_item" />

                <TextView
                    android:id="@+id/test_details_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/android_margin_normal"
                    android:layout_marginTop="@dimen/android_margin_normal"
                    android:lineSpacingExtra="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_form_header"
                    android:gravity="center_vertical"
                    android:text="正常参考值"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_gray_depart_item" />

                <TextView
                    android:id="@+id/test_details_reference"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/android_margin_normal"
                    android:layout_marginTop="@dimen/android_margin_normal"
                    android:lineSpacingExtra="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_form_header"
                    android:gravity="center_vertical"
                    android:text="临床意义"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_gray_depart_item" />

                <TextView
                    android:id="@+id/test_details_clinicalSignificance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/android_margin_normal"
                    android:layout_marginTop="@dimen/android_margin_normal"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/test_detail_progress_bar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </FrameLayout>
    </ScrollView>

</LinearLayout>