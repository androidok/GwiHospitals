<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/android_padding_normal"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout android:id="@+id/bottom_footer_container_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <ProgressBar android:layout_width="25dp"
            android:layout_height="25dp"
            style="?android:attr/progressBarStyleSmallInverse"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray_depart_item"
            android:textAppearance="?android:attr/textAppearance"
            android:text="正在加载中..."/>
    </LinearLayout>
    <Button android:id="@+id/bottom_footer_loading_more"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:textColor="@color/text_gray_depart_item"
        android:textAppearance="?android:attr/textAppearance"
        android:text="网络异常，点击重试"/>
</FrameLayout>
