<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pay_type_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/android_margin_normal"
    android:background="@drawable/shape_corner_border"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pay_type_medical_card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/android_padding_normal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:paddingLeft="@dimen/android_padding_middle"
            android:paddingRight="@dimen/android_padding_middle"
            android:src="@drawable/medical_card" />

        <RadioButton
            android:id="@+id/pay_type_medical_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableLeft="@drawable/selector_radion_button_v2"
            android:drawablePadding="@dimen/android_padding_normal"
            android:text="诊疗卡支付"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/text_gray_depart_item" />
    </LinearLayout>

    <View
        android:id="@+id/pay_type_medical_card_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_400" />


    <LinearLayout
        android:id="@+id/pay_type_boc_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/android_padding_normal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:paddingLeft="@dimen/android_padding_middle"
            android:paddingRight="@dimen/android_padding_middle"
            android:src="@drawable/pay_type_boc" />

        <RadioButton
            android:id="@+id/pay_type_china_bank"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableLeft="@drawable/selector_radion_button_v2"
            android:drawablePadding="@dimen/android_padding_normal"
            android:text="中国银行支付"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/text_gray_depart_item" />
    </LinearLayout>

    <View
        android:id="@+id/pay_type_boc_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_400" />

    <LinearLayout
        android:id="@+id/pay_type_alipay_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/android_padding_normal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:paddingLeft="@dimen/android_padding_middle"
            android:paddingRight="@dimen/android_padding_middle"
            android:src="@drawable/aliay" />

        <RadioButton
            android:id="@+id/pay_type_alipay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableLeft="@drawable/selector_radion_button_v2"
            android:drawablePadding="@dimen/android_padding_normal"
            android:text="@string/alipay_pay"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/text_gray_depart_item" />
    </LinearLayout>

    <View
        android:id="@+id/pay_type_alipay_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_400" />

    <LinearLayout
        android:id="@+id/pay_type_weixin_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/android_padding_normal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:paddingLeft="@dimen/android_padding_middle"
            android:paddingRight="@dimen/android_padding_middle"
            android:src="@drawable/pay_type_weixin" />

        <RadioButton
            android:id="@+id/pay_type_weixin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableLeft="@drawable/selector_radion_button_v2"
            android:drawablePadding="@dimen/android_padding_normal"
            android:text="微信支付"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/text_gray_depart_item" />
    </LinearLayout>

    <View
        android:id="@+id/pay_type_weixin_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_400" />

    <LinearLayout
        android:id="@+id/pay_type_union_pay_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/android_padding_normal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:paddingLeft="@dimen/android_padding_middle"
            android:paddingRight="@dimen/android_padding_middle"
            android:src="@drawable/unionpay" />

        <RadioButton
            android:id="@+id/pay_type_union_pay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableLeft="@drawable/selector_radion_button_v2"
            android:drawablePadding="@dimen/android_padding_normal"
            android:text="@string/uinonpay"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/text_gray_depart_item" />
    </LinearLayout>

    <View
        android:id="@+id/pay_type_union_pay_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_400"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/pay_type_ccb_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/android_padding_normal"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:paddingLeft="@dimen/android_padding_middle"
            android:paddingRight="@dimen/android_padding_middle"
            android:src="@drawable/pay_type_ccb" />

        <RadioButton
            android:id="@+id/pay_type_construction_bank"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableLeft="@drawable/selector_radion_button_v2"
            android:drawablePadding="@dimen/android_padding_normal"
            android:text="中国建设银行支付"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/text_gray_depart_item" />
    </LinearLayout>

    <View
        android:id="@+id/pay_type_ccb_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_400" />
</RadioGroup>