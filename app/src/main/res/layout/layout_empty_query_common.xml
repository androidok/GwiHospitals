<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/empty_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size1"
        android:background="@android:color/darker_gray"/>
    <TextView
        android:layout_below="@id/empty_divider"
        android:id="@+id/empty_query_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/android_padding_normal"
        android:background="@color/grey_400"
        android:textColor="@drawable/selector_item_text"
        android:text="@string/no_outpaient_charge_list"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/img_sorry"/>
</RelativeLayout>