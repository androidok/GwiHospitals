<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_header" />

    <!-- 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/android_margin_micro"
        android:layout_marginTop="@dimen/android_margin_micro"
        android:orientation="vertical">

        <View style="@style/DividerSytle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/comm_range_average"
                android:background="@color/pc_listitem_color"
                android:orientation="vertical"
                android:padding="@dimen/android_padding_normal">

                <TextView
                    android:id="@+id/txt_packing_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/android_margin_micro"
                    android:drawableTop="@drawable/stop_parking"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="地面停车场A区" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/comm_range_average"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/android_pading_middle_big"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_car_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/android_margin_normal"
                        android:text="车位数量：100" />

                    <TextView
                        android:id="@+id/txt_left_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="剩余数量：25" />

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <View style="@style/DividerSytle" />
    </LinearLayout>
    <!-- 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/android_margin_micro"
        android:layout_marginTop="@dimen/android_margin_micro"
        android:orientation="vertical">

        <View style="@style/DividerSytle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/comm_range_average"
                android:background="@color/pc_listitem_color"
                android:orientation="vertical"
                android:padding="@dimen/android_padding_normal">

                <TextView
                    android:id="@+id/txt_packing_area1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/android_margin_micro"
                    android:drawableTop="@drawable/stop_parking"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="地面停车场B区" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/comm_range_average"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/android_pading_middle_big"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_car_num1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/android_margin_normal"
                        android:text="车位数量：100" />

                    <TextView
                        android:id="@+id/txt_left_num1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="剩余数量：25" />

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <View style="@style/DividerSytle" />
    </LinearLayout>

    <!-- 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/android_margin_micro"
        android:layout_marginTop="@dimen/android_margin_micro"
        android:orientation="vertical">

        <View style="@style/DividerSytle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/comm_range_average"
                android:background="@color/pc_listitem_color"
                android:orientation="vertical"
                android:padding="@dimen/android_padding_normal">

                <TextView
                    android:id="@+id/txt_packing_area2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/android_margin_micro"
                    android:drawableTop="@drawable/stop_parking"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="地面停车场C区" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/comm_range_average"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/android_pading_middle_big"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_car_num2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/android_margin_normal"
                        android:text="车位数量：100" />

                    <TextView
                        android:id="@+id/txt_left_num2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="剩余数量：25" />

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <View style="@style/DividerSytle" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/android_margin__big"
        android:background="@drawable/stop_pic"
        android:scaleType="fitXY" />
</LinearLayout>
