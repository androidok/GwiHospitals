<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_module_height"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/android_padding_middle"
    android:paddingRight="@dimen/android_padding_middle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/smart_leading_examining" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_icon"
            android:orientation="vertical"
            android:paddingLeft="@dimen/android_padding_normal">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="@integer/comm_range_average"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_tips"
                    android:layout_width="80dp"
                    android:layout_height="16dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/android_margin_normal"
                    android:scaleType="fitXY"
                    android:src="@drawable/smart_leading_examining2" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="@integer/comm_range_average"
                android:orientation="vertical">

                <!--                <TextView
                                    android:id="@+id/txt_desp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentTop="true"
                                    android:textSize="@dimen/micro_text_size" />-->

                <TextView
                    android:id="@+id/txt_desp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textSize="@dimen/micro_text_size" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
