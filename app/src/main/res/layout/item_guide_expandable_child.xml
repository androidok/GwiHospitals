<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_image_inicator_background">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/android_padding_middle"
            android:src="@drawable/selector_tcm1" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/android_padding_middle"
        android:paddingRight="@dimen/android_padding_middle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/register_num"
                style="style/ListTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/label_register_num_colon" />

            <TextView
                android:id="@+id/txt_register_num"
                style="style/ListTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/register_num"
                android:text="@string/label_register_num_colon" />

            <TextView
                android:id="@+id/txt_executed"
                style="style/ListTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/label_executed" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/receipt_num"
                style="style/ListTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/label_receipt_num_colon" />

            <TextView
                android:id="@+id/txt_receipt_num"
                style="style/ListTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/receipt_num"
                android:text="@string/label_receipt_num_colon" />

            <TextView
                android:id="@+id/total_cost"
                style="style/ListTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/txt_total_cost"
                android:text="@string/label_total_cost_colon" />

            <TextView
                android:id="@+id/txt_total_cost"
                style="style/ListTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/cqd_prescription_amount_color"
                android:text="@string/label_total_cost_colon" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/payment_time"
                style="style/ListTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/txt_payment_time"
                android:text="@string/label_payment_time_colon" />

            <TextView
                android:id="@+id/txt_payment_time"
                style="style/ListTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/label_payment_time_colon" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>