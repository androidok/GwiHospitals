<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_corner_gray"
    android:layout_marginLeft="@dimen/android_margin_normal"
    android:layout_marginRight="@dimen/android_margin_normal"
    android:layout_marginBottom="@dimen/android_margin_normal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/holo_blue_light"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="取药"
            android:textColor="@color/white" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray" />

            <TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_margin="@dimen/android_margin_normal"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的序号：" />

                    <TextView
                        android:id="@+id/queue_drug_waiting_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123" />
                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_margin="@dimen/android_margin_normal"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当前序号：" />

                    <TextView
                        android:id="@+id/queue_drug_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123" />
                </TableRow>
            </TableRow>

            <TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_marginLeft="@dimen/android_margin_normal"
                    android:layout_marginRight="@dimen/android_margin_normal"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="窗口编号：" />

                    <TextView
                        android:id="@+id/queue_drug_exec_loaction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123" />
                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_marginLeft="@dimen/android_margin_normal"
                    android:layout_marginRight="@dimen/android_margin_normal"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="药房名称：" />

                    <TextView
                        android:id="@+id/queue_drug_depart_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123" />
                </TableRow>
            </TableRow>

            <TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/android_margin_normal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="日期：" />

                    <TextView
                        android:id="@+id/queue_drug_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2014-10-28" />
                </TableRow>
            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>