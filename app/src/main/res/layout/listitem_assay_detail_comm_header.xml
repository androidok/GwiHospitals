<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ly_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cqd_box_item_height"
        android:orientation="vertical">

        <View
            android:id="@+id/line_top"
            style="@style/DividerSytle"
            android:layout_alignParentTop="true" />

        <LinearLayout
            android:id="@+id/line_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/aqd_length_range_name">

                <TextView
                    android:id="@+id/txt_project_name"
                    style="@style/CostsQueryDetailBoxTextCenter"
                    android:text="@string/label_project_name" />

                <View
                    style="@style/DividerSytleVertical"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/aqd_length_range_ref">

                <TextView
                    android:id="@+id/txt_reference"
                    style="@style/CostsQueryDetailBoxTextCenter"
                    android:text="@string/label_reference" />

                <View
                    style="@style/DividerSytleVertical"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/aqd_length_range_result">

                <TextView
                    android:id="@+id/txt_result_value"
                    style="@style/CostsQueryDetailBoxTextCenter"
                    android:text="@string/label_result_value" />

                <View
                    style="@style/DividerSytleVertical"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@integer/aqd_length_range_unit">

                <TextView
                    android:id="@+id/txt_unit"
                    style="@style/CostsQueryDetailBoxTextCenter"
                    android:text="@string/label_unit" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/line_bottom"
            style="@style/DividerSytle"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</LinearLayout>
