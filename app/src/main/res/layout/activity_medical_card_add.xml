<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    tools:context="com.gwi.selfplatform.ui.activity.user.MedicalCardAddActivity">

    <include layout="@layout/include_header" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow android:padding="@dimen/android_margin_normal">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/idc_name"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/android_padding_micro"
                android:text="用户姓名："/>
            <com.gwi.selfplatform.ui.view.ShakableEditText
                android:id="@+id/m_card_patient_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:padding="@dimen/android_padding_micro"
                android:background="@drawable/selector_input_border_primary"/>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_300" />

        <TableRow android:padding="@dimen/android_margin_normal">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/idc_phone"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/android_padding_micro"
                android:text="手机号码："/>
            <com.gwi.selfplatform.ui.view.ShakableEditText
                android:id="@+id/m_card_mobile"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:padding="@dimen/android_padding_micro"
                android:background="@drawable/selector_input_border_primary"/>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_300" />

        <TableRow android:padding="@dimen/android_margin_normal">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/idc_id_card"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/android_padding_micro"
                android:text="身份证号："/>
            <com.gwi.selfplatform.ui.view.ShakableEditText
                android:id="@+id/m_card_id_card"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:padding="@dimen/android_padding_micro"
                android:background="@drawable/selector_input_border_primary"/>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_300" />

        <TableRow android:padding="@dimen/android_margin_normal">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/idc_medical_card"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/android_padding_micro"
                android:text="@string/label_card"/>
            <com.gwi.selfplatform.ui.view.ShakableEditText
                android:id="@+id/m_card_medaical_card"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:padding="@dimen/android_padding_micro"
                android:background="@drawable/selector_input_border_primary"/>
        </TableRow>
    </TableLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_300" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/android_margin_normal"
        android:drawablePadding="@dimen/android_padding_micro"
        android:drawableLeft="@drawable/notice"
        android:textColor="@color/bg_btn_orange"
        android:gravity="center_vertical"
        android:text="目前仅支持绑定院内诊疗卡"
        android:background="@color/grey_300"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/btn_add_medical_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_primary"
        android:layout_marginLeft="@dimen/android_margin_normal"
        android:layout_marginRight="@dimen/android_margin_normal"
        android:layout_marginBottom="@dimen/android_margin_middle"
        android:textColor="@color/white"
        android:text="确认新增"/>
</LinearLayout>
