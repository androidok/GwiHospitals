<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/android_padding_micro">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <EditText
            android:id="@id/text_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext"
            android:drawableLeft="@drawable/main_bottom_tab_search_normal"
            android:hint="请输入搜索关键字"
            android:inputType="text"
            android:singleLine="true" />

        <ImageButton
            android:id="@id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/android_margin_normal"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/uikit_input_delete"
            android:visibility="gone" />
    </RelativeLayout>

    <Button
        android:id="@id/search"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/android_margin_normal"
        android:background="@drawable/login_btn_bg"
        android:padding="@dimen/android_padding_micro"
        android:text="搜索"
        android:textColor="@color/white" />
</LinearLayout>
