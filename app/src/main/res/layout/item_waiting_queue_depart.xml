<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/android_height_middle_2"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView android:id="@+id/waiting_queue_item_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center"
        android:textSize="@dimen/small_middle_text_size" />

    <TextView
        android:id="@+id/waiting_queue_item_paitent_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/small_middle_text_size" />

    <TextView
        android:id="@+id/waiting_queue_item_wating_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center"
        android:textSize="@dimen/small_middle_text_size" />

    <TextView
        android:id="@+id/waiting_queue_item_exec_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/small_middle_text_size" />

</LinearLayout>