<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" android:state_enabled="true">
        <shape >
            <gradient android:startColor="@color/holo_blue_dark" android:endColor="@color/holo_blue_dark"/>
        </shape>
    </item>
    <item android:state_pressed="false" android:state_enabled="true">
        <shape>
            <gradient android:startColor="@color/blue_sky" android:endColor="@color/blue_sky"/>
        </shape>
    </item>
    
    <item android:state_enabled="false">
        <shape>
            <gradient android:startColor="@color/gray" android:endColor="@color/gray"/>
        </shape>
    </item>
</selector>
